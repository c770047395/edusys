<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bysj.dao.OrdersMapper">

    <select id="getStudent" resultType="Student">
        select * from student where id = #{user_id}
    </select>
    <select id="getTeacher" resultType="Teacher">
        select * from teacher where id = #{teacher_id}
    </select>
    <resultMap id="order" type="Orders">
        <association property="student" column="user_id" javaType="Student" select="getStudent"/>
        <association property="teacher" column="teacher_id" javaType="Teacher" select="getTeacher"/>
    </resultMap>
    <select id="queryAllOrders" resultMap="order">
        select * from orders
    </select>
    <select id="queryOrdersById" resultMap="order">
        select * from orders where id = #{id}
    </select>
    <select id="queryOrdersByUserId" resultMap="order">
        select * from orders where user_id = #{userId}
    </select>
    <select id="queryOrdersByTeacherId" resultMap="order">
        select * from orders where teacher_id = #{teacherId}
    </select>
    <insert id="addOrders" parameterType="Orders">
        insert into orders(pub_time,fin_time,check_num,post_num,sub,level,content,price,week_num,status,user_id,teacher_id)
        values(#{pubTime},#{finTime},#{checkNum},#{postNum},#{sub},#{level},#{content},#{price},#{weekNum},#{status},#{student.id},#{teacher.id})
    </insert>
    <update id="updateOrders" parameterType="Orders">
        update orders set pub_time=#{pubTime},fin_time=#{finTime},check_num=#{checkNum},post_num=#{postNum},sub=#{sub},level=#{level},content=#{content},price=#{price},week_num#{weekNum},status=#{status},user_id=#{student.id},teacher_id=#{teacher.id} where id = #{id}
    </update>
    <delete id="deleteOrders" >
        delete from orders where id = #{id}
    </delete>


</mapper>